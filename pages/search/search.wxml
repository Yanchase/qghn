<!--pages/search/search.wxml-->
<view class="search_container">
  <view class="search_bar">
    <van-search id="v-search" v-model="{{value}}" show-action action-text="返回" bind:cancel="onCancel" bind:search="onSearch" bind:change="changeInputValue" placeholder="请输入搜索关键词" focus="true"></van-search>
  </view>
  <view class="stuff_container">
    <van-grid wx:if="{{!isEmpty}}" column-num="2"  clickable="true">
      <van-grid-item use-slot wx:for="{{stuffs}}" wx:key="key" link-type="navigateTo" url="">
        <view class="stuff_item">
          <image src="{{item.pic}}" mode="widthFix" style="width: 100%"></image>
          <text style="word-break: break-all; display: -webkit-box; overflow: hidden; -webkit-box-orient: vertical; -webkit-line-clamp: 2; margin-bottom: 20rpx;">{{item.name}}</text>
          <view class="stuff_p_s">
            <text class="price">￥{{item.retailPrice}}</text>
            <!--<text class="sale">{{item.sale}}件已售</text>-->
          </view>
        </view>
      </van-grid-item>
    </van-grid>
    <view style="display:flex; align-items:center; justify-content:center;" wx:else><text style="margin-top: 60rpx; font-size: 50rpx; color: gray;">没有找到相关商品哦</text></view>
  </view>
</view>