page {
  background-color: white;
}
.user_info_wrap {
  height: 275rpx;
  overflow: hidden;
  position: relative;
  background-color: #fab300;
}
.user_info_wrap .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}
.user_info_wrap .userinfo .userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  padding-bottom: 100rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -50rpx;
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  border-radius: 10rpx;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: content;
  text-align: center;
  padding: 10rpx 5rpx;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: red;
}
.user_content .user_main .history_wrap navigator .his_name {
  font-size: small;
}
.user_content .user_main .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .user_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .order_content navigator .order_name {
  font-size: small;
}
