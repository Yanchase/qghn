.main_container {
  display: flex;
  flex-direction: column;
}

.top_view {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goods_count {
  margin-left: 30rpx;
  font-size: 25rpx;
  height: fit-content;
  color: #909090;
}

.control_button {
  margin-right: 30rpx;
}

.empty_cart_text {
  margin-top: 120rpx;
  margin-left: 120rpx;
  margin-right: 120rpx;
  font-size: 50rpx;
  color: gray;
  text-align: center;
}

.nempty_view {
  background-color: lightgray;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
  border-radius: 20rpx;
  width: 710rpx;
  background-color: white;
}

.checkbox {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.card {
  width: 600rpx;
}

.card_text {
  margin-top: 10rpx;
  font-size: 25rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card_num {
  display: flex;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.bottom_left {
  display: flex;
  width: fit-content;
  align-items: center;
  justify-content: center;
}

.bottom_right {
  display: flex;
  flex-direction: row;
}

.num_text {
  display: flex;
  width: 60rpx;
  align-items: center;
  justify-content: center;
  border: lightgray;
  border-width: 1rpx;
  border-style: solid;
}

.bottom_view {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.check_all {
  margin-left: 40rpx;
}

.confirm_button {
  margin-right: 40rpx;
  padding-left: 15rpx;
  font-size: 30rpx;
}